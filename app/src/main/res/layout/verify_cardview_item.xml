<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvPet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/verifyImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/verifyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชื่อ:"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/verifySurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="นามสกุล:"
                    android:layout_marginLeft="25dp"
                    android:textSize="16sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/verifyLicence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เลขบัตรประชาชน:"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/verifyBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="วันเกิด:"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/verifyExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="วันบัตรหมดอายุ:"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/verifyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="อนุมัติ"
                android:textSize="18sp"
                android:background="@drawable/buttoncurf_green"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:onClick="acceptVerify"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>